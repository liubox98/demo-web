page,
.container {
  min-height: 100%;
  background: #f5f5f5;
}
.container {
  padding-top: 7vh;
}
/* 优惠券状态区 */
.navbar-area {
  top: 0;
  white-space: nowrap;
}
.navbar-area .state-area {
  height: 7vh;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.06);
  z-index: 10;
}
.navbar-area .nav-item {
  flex: 1;
}
.navbar-area .nav-item.active:after {
  content: '';
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  bottom: 0;
  width: 44px;
  height: 0;
  border-bottom: 2px solid #ff6a6c;
}
/* 优惠券轮播区 */
.swiper-area {
  height: 93vh;
}
.coupon_box {
  position: relative;
}
.coupon_box:last-child {
  margin-bottom: 20rpx;
}
.coupon_box .left {
  background-color: #ff6a6c;
  color: #fff;
  width: 30%;
}
.coupon_box .left .price {
  color: #fff !important;
}
.coupon_box .right {
  margin-left: 30%;
}
.coupon_box .discount {
  font-weight: 580;
}
.coupon_box .discount::after {
  content: '折';
  font-size: 24rpx;
  margin-left: 6rpx;
}
.coupon_box .border-line {
  border-bottom: 1px dotted #ededed;
}
.disabled .left {
  background-color: #d9d9d9;
  color: #b2b2b2 !important;
}
.disabled .left .price {
  color: #b2b2b2 !important;
}
.disabled .iconfont {
  position: absolute;
  top: 0rpx;
  right: 30rpx;
  font-size: 110rpx;
}

