page {
  overflow: hidden;
  background-color: #f5f5f5;
}
.sign-area .sign-top {
  left: -10%;
  width: 120%;
  height: 360rpx;
  padding: 0rpx 10%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.sign-area .sign-top .btn-line {
  padding: 10rpx 30rpx;
  border: 1px solid #333;
}
.sign-area .bg-disabled {
  background-color: #c0c4cd !important;
  color: #fff !important;
}
.sign-area .sign-content {
  top: 240rpx;
  left: 0;
  right: 0;
  margin: 0 50rpx;
}
.sign-area .sign-content .iconfont {
  color: #c0c4cd;
  font-size: 50rpx;
}

