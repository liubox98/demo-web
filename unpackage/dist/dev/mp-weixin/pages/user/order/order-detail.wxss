}
/* 订单数据区 */
.order-area .item {
  line-height: 66rpx;
}
.order-area .item .copy {
  margin-left: 20rpx;
  padding: 10rpx 40rpx;
  background-color: #f1f1f1;
  border-radius: 40rpx;
  font-size: 24rpx;
}
/* 数据统计区 */
.total-area .item {
  line-height: 48rpx;
}
.total-area .item text {
  padding-right: 16rpx;
}
/* 操作区 */
.oper-area {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  z-index: 1;
  bottom: 0;
  left: 0;
  border-top: 1px solid #f0f0f0;
  /* 操作按钮 */
}
.oper-area .btn-area {
  font-size: 24rpx;
  color: #75787d;
  width: 96rpx;
}
.oper-area .btn-area .iconfont {
  font-size: 40rpx;
  line-height: 48rpx;
}
.oper-area .action-btn {
  width: 156rpx;
  height: inherit;
  line-height: inherit;
  margin: 0;
  margin-left: 20rpx;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #303133;
  background: #fff;
  border-radius: 100px;
}
.oper-area .action-btn:after {
  border-radius: 100px;
}
.oper-area .action-btn.main-btn {
  background: #fff9f9;
  color: #ff6a6c;
}
.oper-area .action-btn.main-btn:after {
  border-color: #f7bcc8;
}

