page {
  height: 100%;
  background-color: #f5f5f5;
}
.category {
  overflow: hidden;
}
.category .left {
  width: 200rpx;
  background-color: #f5f5f5;
}
.category .left .item {
  height: 100rpx;
  color: #75787d;
  position: relative;
}
.category .left .item.active {
  color: #ff6a6c;
  background: #fff;
}
.category .left .item.active:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  height: 36rpx;
  width: 8rpx;
  background-color: #ff6a6c;
  opacity: 0.8;
}
.category .right {
  flex: 1;
  overflow: hidden;
  display: block;
}
.category .right .item {
  flex-shrink: 0;
  width: 33.33%;
  font-size: 26rpx;
  color: #666;
}
.category .right .item image {
  width: 130rpx;
  height: 130rpx;
}
.goods {
  display: flex;
}
.goods .goods-left image {
  width: 120rpx;
  height: 120rpx;
}
.goods .price-box {
  bottom: 0;
}

