/* 购物车列表项 */
.cart-item:last-child {
  margin-bottom: 0;
}
.cart-item .image-wrapper {
  width: 230rpx;
  height: 230rpx;
  flex-shrink: 0;
}
.cart-item .image-wrapper image {
  opacity: 1;
}
.cart-item .checkbox {
  top: -16rpx;
  left: -16rpx;
  color: #C0C4CC;
  line-height: 1;
  font-size: 46rpx;
  padding: 5rpx;
  z-index: 8;
}
.cart-item .disabled {
  color: #fff !important;
  width: 70%;
  height: 70%;
  background-color: rgba(51, 51, 51, 0.5);
}
.cart-item .item-right {
  height: 260rpx;
  overflow: hidden;
}
.cart-item .del-btn {
  bottom: 40rpx;
  right: 30rpx;
  width: 70rpx;
  height: 70rpx;
}
/* 底部栏 */
.action-section {
  z-index: 999;
  bottom: 0;
  height: 100rpx;
}
.action-section .checkbox .iconfont {
  font-size: 46rpx;
  color: #2C405A;
}
.action-section .clear-btn {
  left: 100rpx;
  background: #2C405A;
  border-radius: 0 50rpx 50rpx 0;
  padding: 12rpx 0;
  transition: all .2s;
  width: 0;
  opacity: 0;
}
.action-section .clear-btn.show {
  width: 120rpx;
  opacity: 1;
}
.action-section .payment {
  padding: 0 40rpx;
  font-size: 28rpx;
  background: #ff6a6c;
  box-shadow: 1px 2px 5px rgba(217, 60, 93, 0.72);
}

