page {
  background-color: #f5f5f5;
}
.navbar {
  top: 0px;
  left: 0;
  height: 100rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
  z-index: 10;
}
.navbar .nav-item {
  color: #303133;
  font-size: 30rpx;
}
.navbar .nav-item.active:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 120rpx;
  height: 0;
  border-bottom: 4rpx solid #ff6a6c;
}
.navbar .iconfont {
  width: 30rpx;
  height: 14rpx;
  font-size: 20rpx;
  line-height: 1;
  margin-left: 4rpx;
}
.goods-list .list {
  padding: 0 3vw 20rpx;
}
.goods-list .item {
  width: 46vw;
  overflow: hidden;
  margin-top: 2vw;
}
.goods-list .item:nth-child(2n) {
  margin-left: 1vw;
}
.goods-list .item:nth-child(2n + 1) {
  margin-right: 1vw;
}
.goods-list .image-wrapper {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.goods-list .image-wrapper image {
  width: 100%;
  height: 100%;
  opacity: 1;
}

