page {
  background: #f5f5f5;
  padding-bottom: 120rpx;
}
contact-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
}
.fixed-top {
  bottom: 230rpx;
}
/* 01. 轮播区 */
.swiper-area {
  height: 720rpx;
  top: 0;
  z-index: -1;
}
/* 02. 商品数据区 */
.goods-area {
  margin-top: 720rpx;
}
.goods-area .price-box {
  display: flex;
  align-items: baseline;
}
.goods-area .title {
  color: #303133;
  height: 46rpx;
  line-height: 46rpx;
}
.share-area .vertical-line {
  right: 50%;
  height: 40%;
}
/* 03. 规格区 */
.sku-area .active {
  background: #ff6a6c;
  color: #fff !important;
}
/* 04. 服务区 */
.icon-detail {
  right: 30rpx;
  top: 24rpx;
}
/* 05. 评价 */
.evaluate-area .portrait {
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
}
.evaluate-area .right-area image {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  height: 200rpx;
  width: 30%;
}
/* 06. 详情区 */
.detail-area {
  /* 产品详情 */
}
.detail-area .d-header {
  font-size: 30rpx;
  color: #303133;
  position: relative;
}
.detail-area .d-header text {
  padding: 0 20rpx;
  background: #fff;
  position: relative;
  z-index: 1;
}
.detail-area .d-header:after {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 300rpx;
  height: 0;
  content: '';
  border-bottom: 1px solid #ccc;
}
.detail-area .pro-detail {
  width: 100%;
  overflow: hidden;
  -webkit-touch-callout: none;
}
.detail-area .pro-detail ._img {
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}
/* 07. 操作区 */
.oper-area {
  left: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 20rpx 0 #f0f0f0;
  height: 100rpx;
  z-index: 95;
}
.oper-area .btn-area {
  font-size: 24rpx;
  color: #75787d;
  width: 96rpx;
}
.oper-area .btn-area .iconfont {
  font-size: 40rpx;
  line-height: 48rpx;
}
/* 优惠券区 */
.coupon-area {
  max-height: 60vh;
  min-height: 30vh;
}
.coupon-area .coupon-item {
  margin-bottom: 20rpx;
}
.coupon-area .coupon-item:last-child {
  margin-bottom: 0;
}
.coupon-area .coupon-item .content:after {
  position: absolute;
  left: 0;
  bottom: 0;
  content: '';
  width: 100%;
  height: 0;
  border-bottom: 1px dashed #f3f3f3;
  -webkit-transform: scaleY(50%);
          transform: scaleY(50%);
}
.coupon-area .coupon-item .circle {
  position: absolute;
  bottom: -10rpx;
  z-index: 10;
  width: 20rpx;
  height: 20rpx;
  background: #f5f5f5;
  border-radius: 50%;
}
.coupon-area .coupon-item .circle.r {
  right: -6rpx;
}
.coupon-area .coupon-item .circle.l {
  left: -6rpx;
}

