.use-hot-goods {
  background-color: #f3f4f6;
}
.use-hot-goods .list {
  padding: 0 3vw 20rpx;
}
.use-hot-goods .item {
  width: 46vw;
  overflow: hidden;
  margin-top: 2vw;
  background: #fff;
}
.use-hot-goods .item:nth-child(2n) {
  margin-left: 1vw;
}
.use-hot-goods .item:nth-child(2n + 1) {
  margin-right: 1vw;
}
.use-hot-goods .image-wrapper {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.use-hot-goods .image-wrapper image {
  width: 100%;
  height: 100%;
  opacity: 1;
}

